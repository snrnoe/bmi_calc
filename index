    <script type="text/javascript">
      function BMI() {
        var h=document.getElementById('h').value;
        var w=document.getElementById('w').value;
        //var a=document.getElementById('a').value;
        var g=document.getElementById('g').value;
        var under=0
        var over=0
        var mScale=[20, 25, 30, 40, 50];
        var fScale=[19, 24, 30, 40, 50];
        var wScale=[];
        var aIndex=0
        var aScale=[24, 34, 44, 54, 64];
        var bmiScale=["underweight", "normalweight", "overweight", "adipositas", "massive adipositas"];
        var bmi=w/(h/100)**2;
        var bmio=(bmi.toFixed(0));

        function weightScale(){
          document.getElementById("result2").innerHTML = "Your actual weight equals " + bmiScale[i] +"!";
        }
        function underWeight(){
          let underWeight=wScale[under]*(h/100)**2;
          let underWeightO=(underWeight.toFixed(2));
          var upperWeight=wScale[i]*(h/100)**2;
          var upperWeightO=(upperWeight.toFixed(2));
          document.getElementById("result3").innerHTML = bmiScale[i] + " starts at weight of " + underWeightO+"kg " + "and ends at weight of " + upperWeightO +"kg!";
        }

        if (g==="male"){
            wScale=mScale;
            }
        else if(g==="female") {
            wScale=fScale;
        }

        if(!(h==='')&& !(w==='')){
          document.getElementById("result1").innerHTML = "Your BMI is " + bmio;
          for (var i in wScale){
            if (bmio<=wScale[i]){
                under= i;
                under--;
                over= i;
                over++;
                weightScale(i);
                underWeight(i);
                break;
            }
        }
        } else if(h===''|| h == null){
          document.getElementById("result1").innerHTML = "Please insert Height";
        } else if(w===''|| w == null){
          document.getElementById("result1").innerHTML = "Please insert Weight";
        }

        }
    </script>
